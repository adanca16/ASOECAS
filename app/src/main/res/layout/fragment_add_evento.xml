<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="@dimen/nav_header_height"


    android:layout_marginVertical="20dp"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nombre del Evento" />


            <EditText
                android:id="@+id/cajaNombreEvento"
                style="@style/edicionCampos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text=""

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="Descripcion del Evento" />


            <EditText
                android:id="@+id/cajaDescripcionEvento"
                style="@style/edicionCampos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:inputType="text"
                android:text=""

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="Fecha del Evento" />

            <CalendarView
                android:id="@+id/cajaEventoFecha"
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />


            <TextView
                android:id="@+id/textImagen"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/spinnerCarreras"
                android:text="Imagen" />


            <ImageView
                android:id="@+id/cajaImagenEvento"
                style="@style/edicionCampos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textImagen"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:text=""
                />


            <EditText
                android:id="@+id/dirigidoPersona"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:focusable="false"
                android:text="Seleccione el interesado" />


            <Switch
                android:id="@+id/estadoEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visible" />


            <Button
                android:id="@+id/btn_RegisterEvento"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/action_register_Event" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
