<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="cargando">
        <item name="android:color">#eee</item>

    </style>

    <!-- Estilo para los EditText -->
    <style name="edicionCampos" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#eebcb9b9</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorLink">@color/colorPrimaryDark</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorLink" tools:ignore="DuplicateDefinition">
            @color/colorPrimaryDark
        </item>
    </style>

    <!-- Estilo para los EditText -->
    <style name="estiloTitulos" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:color">#ee8f0612</item>
        <item name="android:textSize">15dp</item>
    </style>


    <style name="showCampos" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#eee7e4e4</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorLink">@color/colorPrimaryDark</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColorLink" tools:ignore="DuplicateDefinition">
            @color/colorPrimaryDark
        </item>
    </style>

    <style name="Titulos" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">#eec11128</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Titulo1" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#0A0AFF</item>

    </style>

    <style name="TituloBotones" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#00FF00</item>

    </style>

    <!--Estilos de Pablo-->


    <!--Etiqueta flotante-->
    <style name="AppTheme.FloatingLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/teal</item>
        <item name="android:textSize">@dimen/floating_label</item>
    </style>


    <!--Campo de texto-->
    <style name="AppTheme.EditText" parent="AppTheme">
        <!-- cursor y línea normal-->
        <item name="colorControlNormal">@color/indigo</item>
        <!-- cursor y línea con foco-->
        <item name="colorControlActivated">@color/teal</item>
    </style>

    <!-- mensaje de error debajo del EditText-->
    <style name="AppTheme.EditTextError" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/error</item>
    </style>

    <style name="AppTheme.CharacterCounter" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/teal</item>
    </style>



</resources>

